<%= form_for @project, url: wizard_path , method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.object.errors.full_messages_for(:name)&.first %>
  
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.object.errors.full_messages_for(:details)&.first %>

  <%= f.submit 'Next', name: 'Next' %>
<%= end %>